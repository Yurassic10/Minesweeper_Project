@model List<GameResultsViewModel>

@{
    ViewData["Title"] = "Game Results";
}
<link rel="stylesheet" href="~/css/minesweeper.css" />


<div class="results-container">

<h2>Game Results</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Player</th>
            <th>Duration (s)</th>
            <th>Result</th>
            <th>Date Played</th>
            <th>Score</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var result in Model)
        {
            <tr>
                <td>@result.Id</td>
                <td>@result.PlayerName</td>
                <td>@result.DurationSeconds</td>
                <td>@result.Result</td>
                <td>@result.DatePlayed.ToString("g")</td>
                <td>@result.Score</td>
            </tr>
        }
    </tbody>
</table>
</div>
